{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "cargo",
            "command": "build",
            // "args": [ "--verbose", "--config", "debug.toml"],
            "args": [ "--verbose" ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "rust: cargo build"
        },
        {
            "type": "cargo",
            "command": "build",
            // "args": [ "--verbose", "--release", "--config", "release.toml"],
            "args": [ "--verbose", "--release" ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "rust: cargo build (release)"
        }
    ]
}